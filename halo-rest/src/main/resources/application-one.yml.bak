
#数据源
spring:
  #激活哪一个环境的配置文件
  profiles:
    active: one
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    type: com.alibaba.druid.pool.DruidDataSource
    url: jdbc:mysql://192.168.158.5:3306/test?useUnicode=true&characterEncoding=utf-8&allowMultiQueries=true&autoReconnect=true&failOverReadOnly=false
    username: root
    password: halo2021@7fa71?3J
    druid:
      max-active: 50
      min-idle: 0
      initial-size: 5
      max-wait: 60000
      timeBetweenEvictionRunsMillis: 60000
      minEvictableIdleTimeMillis: 300000
      validationQuery: SELECT 1 FROM DUAL
      testWhileIdle: true
      testOnBorrow: false
      testOnReturn: false
      poolPreparedStatements: true
      #   配置监控统计拦截的filters，去掉后监控界面sql无法统计，'wall'用于防火墙
      filters: stat,wall
      filter:
        stat:
          log-slow-sql: true
          slow-sql-millis: 500 #毫秒
      stat-view-servlet:
        enabled: true
        login-username: admin
        login-password: 123456
      maxPoolPreparedStatementPerConnectionSize: 20
      useGlobalDataSourceStat: true
      connectionProperties: druid.stat.mergeSql=true;druid.stat.slowSqlMillis=500


  #  全局配置返回字符串
  jackson:
    date-format: yyyy-MM-dd HH:mm:ss
    time-zone: GMT+8

  # Redis配置
  redis:
    database: 2
    host: 192.168.158.5
    port: 6379
    jedis:
      pool:
        max-active: 8
        max-idle: 8
        min-idle: 0
        max-wait: 1000


# MyBatis
mybatis:
  # 指定全局配置文件
  config-location: classpath:/mybatis/mybatis-config.xml
  mapper-locations: classpath*:mybatis/mapper/**/*Mapper.xml


# 显示SQL语句部分
logging:
  level:
    com.example.halo.demo.mapper: debug

